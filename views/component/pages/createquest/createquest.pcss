label, input, textarea {
    display: block;
    outline: none;
}

.create-not-authorized {
    color: $yellow;
    width: 1360px;
    margin: 0 auto;
    padding: 40px 30px;
    overflow: hidden;

    @media (--all) {
        width: auto;
    }
}

.createModal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .1);
    display: flex;
    z-index: 1;
    color: $yellow;
    align-items: center;
    justify-content: center;

    &_message {
        text-align: center;
        padding: 10px;
        border: solid 1px;
        background-color: $graydark;

        & a {
            display: inline-block;
            margin: 20px 10px;
            text-decoration: none;
            border-bottom: 1px solid transparent;
            font-size: 20px;
            transition: all .3s ease-in;
            color: $blueviolet;

            @media (--mobile-sm) {
                display: block;
                margin: 0;
            }

            &:hover {
                border-bottom: 1px solid $yellow;
                color: $yellow;
            }
        }
    }
}

.quest-data {
    width: 1360px;
    margin: 0 auto;
    padding: 40px 30px;
    overflow: hidden;

    @media (--all) {
        width: auto;
    }

    &__title {
        font-size: 28px;
        font-weight: 600;
        text-transform: uppercase;
        text-align: center;
        color: $blueviolet;
        text-shadow: 0 0 10px rgba(0, 0, 0, .9);
    }

    &__item {
        margin: 20px 0;
        padding: 20px 0;
    }

    & label {
        width: 500px;
        margin: 20px 10px 10px;
        font-size: 20px;
        font-weight: 600;
        color: $yellow;
        text-shadow: 0 0 10px rgba(0, 0, 0, .9);
    }

    &__textarea, &__input {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        box-sizing: border-box;
        border-radius: 4px;
        border: 2px solid $blueviolet;
        box-shadow: 0 0 10px $blueviolet;
        font-size: 16px;
        font-weight: 600;
        background: $graydark;
        color: $turquoise;
        transition: all .2s ease-in-out;

        &:focus {
            border: 2px solid $turquoise;
            box-shadow: 0 0 10px $turquoise;
        }

        &::-webkit-input-placeholder {
            color: $blueviolet;
            font-size: 16px;
        }

        &::-moz-placeholder {
            color: $white;
            font-size: 16px;
        }

        &:-ms-input-placeholder {
            color: $white;
            font-size: 16px;
        }

        &:-moz-placeholder {
            color: $white;
            font-size: 16px;
        }
    }

    &__label {
        position: relative;

        &_required {

            &::after {
                content: '*';
                position: absolute;
                top: -10px;
                right: -30px;
                font-size: 60px;
                color: $blueviolet;
            }
        }

        &_validation {

            &--true {

                & input:not([type="file"]), & textarea {
                    border: 2px solid $turquoise;
                    box-shadow: 0 0 10px $turquoise;
                }

                & input[type="file"] {

                    &::after {
                        border: 2px solid $turquoise;
                        box-shadow: 0 0 10px $turquoise;
                    }
                }

                &::after {
                    content: '?';
                    position: absolute;
                    top: -10px;
                    right: -30px;
                    font-size: 60px;
                    color: $turquoise;
                }
            }
        }
    }

    &__file {
        position: relative;
        height: auto;
        margin-top: 20px;
        padding-left: 100px;
        text-indent: -20px;
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;

        &::after {
            content: '???????? ??????';
            position: absolute;
            top: -10px;
            left: 0;
            width: 210px;
            height: 40px;
            line-height: 40px;
            border-radius: 4px;
            text-indent: 0;
            text-align: center;
            background-color: $graydark;
            border: 2px solid $blueviolet;
            box-shadow: 0 0 10px $blueviolet;
            cursor: pointer;
        }
    }

    &__more, &__submit, &__coordinates {
        width: 170px;
        height: 40px;
        margin-top: 40px;
        margin-left: 10px;
        line-height: 40px;
        border-radius: 4px;
        border: 2px solid $blueviolet;
        font-size: 14px;
        font-weight: 600;
        text-indent: 0;
        text-align: center;
        text-transform: uppercase;
        box-shadow: 0 0 10px $blueviolet;
        background-color: $graydark;
        color: $yellow;
        cursor: pointer;
        transition: all .2s ease-in-out;

        &:hover {
            border: 2px solid $turquoise;
            box-shadow: 0 0 10px $turquoise;
        }
    }

    &__more {
        position: relative;
        width: 200px;
        text-align: left;
        padding-left: 10px;

        &::after {
            content: '+';
            position: absolute;
            top: -1px;
            right: 10px;
            font-size: 36px;
        }
    }

    &__coordinates {
        width: 230px;
    }
}
