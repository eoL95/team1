@import 'source/_util/style.pcss';

* {
    margin: 0;
    padding: 0;
}

html, body, #root, #root > div {
    height: 100vh;
    width: 100%;
}


body {
    min-width: 320px;
    font-family: sans-serif;
    background-image: url('source/img/town.jpg');
}

#root > div {
    display: flex;
    flex-direction: column;
}

.main {
    flex: 1;
    background-color: rgba(50, 55, 57, .9);
}
